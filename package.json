{
  "name": "baby-log",
  "version": "1.0.1",
  "description": "Baby Logger Web App",
  "main": "sever/server.js",
  "scripts": {
    "build:clean": "rm -rf build/client/",
    "build:copy": "mkdir -p build/client/ && cp -R client/ build/client/",
    "build:client": "rollup -c client.rollup.config.js",
    "build:service-worker": "rollup -c service-worker.rollup.config.js",
    "build:file-manifest": "node tools/build-sw.js --dir client/ --dir build/client/ --ignore /sw.js --ignore .map$ --ignore res/mipmap-xxxhdpi --ignore web_hi_res_512.png > client/sw-manifest.json",
    "build": "npm run build:clean && npm run build:copy && npm run build:file-manifest && npm run build:service-worker && npm run build:client",
    "start": "node server/server.js",
    "fmt": "prettier --write 'controllers/**/*.{js,json}' 'views/**/*.{js,json}' 'models/**/*.{js,json}' 'tools/**/*.{js,json}' 'client/**/*.{js,json,css}'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Paul Kinlan",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@rollup/plugin-json": "^4.1.0",
    "arg": "^4.1.3",
    "firebase": "^7.15.1",
    "mime": "^2.4.6",
    "node-fetch": "^2.6.0",
    "rollup": "^2.13.1",
    "rollup-plugin-minify-html-literals": "^1.2.4",
    "rollup-plugin-terser": "^6.1.0"
  },
  "engines": {
    "node": "13.0.0"
  },
  "devDependencies": {
    "prettier": "^2.0.5"
  }
}
